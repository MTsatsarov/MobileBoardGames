<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BoardGames.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BoardGames.Pages"
    Shell.FlyoutBehavior="Disabled">


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
	
	<ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />
	
	<ShellContent
        Title="Games List"
        ContentTemplate="{DataTemplate local:GamesList}"
        Route="GamesList" />
	<ShellContent
        Title="Tic Tac Toe"
        ContentTemplate="{DataTemplate local:TicTacToePage}"
        Route="TicTacToePage" />
	<ShellContent
        Title="Chess"
        ContentTemplate="{DataTemplate local:ChessPage}"
        Route="ChessPage" />
</Shell>
