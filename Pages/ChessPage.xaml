<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoardGames.Pages.ChessPage"
			 xmlns:model="clr-namespace:BoardGames.Models.Chess"
			xmlns:viewmodel="clr-namespace:BoardGames.ViewModels"
			 x:DataType="viewmodel:ChessViewModel"
             Title="ChessPage">
	<VerticalStackLayout VerticalOptions="CenterAndExpand">
		<Grid >
			<CollectionView ItemsSource="{Binding Board}" WidthRequest="360" HeightRequest="380">
				<CollectionView.ItemsLayout>
					<GridItemsLayout Span="8" Orientation="Vertical" />
				</CollectionView.ItemsLayout>
				<CollectionView.ItemTemplate>
					<DataTemplate x:DataType="model:Square">
						<Frame CornerRadius="0" HeightRequest="45" WidthRequest="45">
							<Frame.Style  >
								<Style TargetType="Frame">
									<Style.Triggers>
										<DataTrigger TargetType="Frame" Binding="{Binding IsWhite}" Value="True">
											<Setter Property="Background" Value="#D8B68F" />
										</DataTrigger>
										<DataTrigger TargetType="Frame" Binding="{Binding IsWhite}" Value="false
">
											<Setter Property="Background" Value="#975635" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Frame.Style>
							<Image   Source="{Binding Figure.ImagePath}" WidthRequest="40" HeightRequest="40" />
								<Frame.GestureRecognizers>
								<TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodel:ChessViewModel}}, Path=tatatat}"
												  CommandParameter="{Binding .}"/>
								</Frame.GestureRecognizers>
							</Frame>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</Grid>
	</VerticalStackLayout>
</ContentPage>